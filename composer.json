{
    "name": "avvertix/dmarc-report-parser",
    "description": "Parse DMARC xml reports",
    "keywords": [
        "dmarc",
        "dmarc-report",
        "email",
        "parser"
    ],
    "homepage": "https://github.com/avvertix/dmarc-report-parser",
    "license": "MIT",
    "authors": [
        {
            "name": "Alessio Vertemati",
            "email": "avvertix@users.noreply.github.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.3",
        "saloonphp/xml-wrangler": "^1.3",
        "symfony/mime": "^7.0.3"
    },
    "require-dev": {
        "laravel/pint": "^1.0",
        "pestphp/pest": "^4.0",
        "symfony/var-dumper": "^7.2"
    },
    "autoload": {
        "psr-4": {
            "Avvertix\\DmarcReportParser\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Avvertix\\DmarcReportParser\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/pest",
        "test-coverage": "vendor/bin/pest --coverage",
        "format": "vendor/bin/pint"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "phpstan/extension-installer": true
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
